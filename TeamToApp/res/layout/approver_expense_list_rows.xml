<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/claimantPhotoReceiptTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />    
   
    <TextView
        android:id="@+id/approverExpenseDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_toRightOf="@id/claimantPhotoReceiptTextView" 
        android:layout_below="@+id/approverExpenseDescriptionTextView"/>

    <TextView
        android:id="@+id/approverExpenseDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/claimantPhotoReceiptTextView"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/approverCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/claimantPhotoReceiptTextView"
        android:layout_below="@+id/approverExpenseDateTextView"
        android:layout_alignParentLeft="true" />
            
    <TextView
        android:id="@+id/approverCurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/approverExpenseDescriptionTextView"
        android:layout_alignParentRight="true" />   
        
    <TextView
        android:id="@+id/approverPhotoReceiptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/approverCurrencyTextView"
        android:layout_alignParentRight="true" /> 

</RelativeLayout>
