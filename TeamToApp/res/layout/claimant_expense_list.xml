<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context="com.CMPUT301W15T02.teamtoapp.Activities.ClaimantExpenseListActivity" >

    <TextView
            android:id="@+id/claimNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        style="?android:listSeparatorTextViewStyle">
        <TextView
            android:id="@+id/claimStartDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/claimEndDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/claimantExpenseListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
    </ListView>

</LinearLayout>
