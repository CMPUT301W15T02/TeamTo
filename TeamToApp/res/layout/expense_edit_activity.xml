<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.CMPUT301W15T02.teamtoapp.ExpenseEditActivity" >

    <EditText
        android:id="@+id/ExpenseNameTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Expense Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ExpenseDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CurrencyExpenseSpinner"
        android:layout_alignLeft="@+id/ExpenseNameTextBox"
        android:layout_below="@+id/ExpenseNameTextBox"
        android:ems="10"
        android:inputType="date"
        android:text="01/01/2015" />

    <ImageView
        android:id="@+id/ExpenseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CategoryExpenseSpinner"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_launcher" />

    <Spinner
        android:id="@+id/CurrencyExpenseSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ExpenseNameTextBox"
        android:layout_below="@+id/ExpenseSetDateButton"
        android:layout_toRightOf="@+id/ExpenseDateInput" />

    <EditText
        android:id="@+id/ExpenseAmountInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CurrencyExpenseSpinner"
        android:layout_alignLeft="@+id/ExpenseDateInput"
        android:layout_alignTop="@+id/CurrencyExpenseSpinner"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0.00" />

    <Spinner
        android:id="@+id/CategoryExpenseSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ExpenseAmountInput"
        android:layout_below="@+id/CurrencyExpenseSpinner" />

    <EditText
        android:id="@+id/ExpenseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ExpenseImageView"
        android:layout_alignLeft="@+id/CategoryExpenseSpinner"
        android:layout_alignRight="@+id/CategoryExpenseSpinner"
        android:layout_below="@+id/CategoryExpenseSpinner"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Description" />

    <RadioButton
        android:id="@+id/ExpenseCompletedRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ExpenseImageView"
        android:layout_alignRight="@+id/ExpenseDescription"
        android:text="Expense Completed?" />

    <Button
        android:id="@+id/ExpenseSetDateButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CurrencyExpenseSpinner"
        android:layout_below="@+id/ExpenseNameTextBox"
        android:text="Select Date" />

</RelativeLayout>