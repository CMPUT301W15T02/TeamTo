<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.CMPUT301W15T02.teamtoapp.ExpenseEditActivity" >

    <EditText
        android:id="@+id/ExpenseNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Expense Name" >

        <requestFocus android:layout_height="wrap_content" />

    </EditText>

    <TextView
        android:id="@+id/ExpenseDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="01/01/2015" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

    	<EditText
    	    android:id="@+id/ExpenseAmountEditText"
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="3"
    	    android:inputType="numberDecimal"
    	    android:text="0.00" />
    
    	<Spinner
    	    android:id="@+id/CurrencyExpenseSpinner"
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1" />
    
    </LinearLayout>

    <Spinner
        android:id="@+id/CategoryExpenseSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ExpenseDescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Description" />
    
    <ImageView
        android:id="@+id/ExpenseImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <RadioButton
        android:id="@+id/ExpenseCompletedRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Completed?" />

</LinearLayout>