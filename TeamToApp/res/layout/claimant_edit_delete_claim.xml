<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimantClaimsListActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <EditText
            	android:id="@+id/addClaimName"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:ems="10"
           	 	android:hint="Claim Name"
            	android:inputType="text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  >
            
        	<TextView
        	    android:id="@+id/startDateTitle"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:text=" Start Date"
        	    android:textAppearance="?android:attr/textAppearanceMedium"
        	    android:textColor="@android:color/darker_gray" />

        	<TextView
        	    android:id="@+id/endDateTitle"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1.18"
        	    android:text="End Date"
        	    android:textAppearance="?android:attr/textAppearanceMedium"
        	    android:textColor="@android:color/darker_gray" />

        </LinearLayout>



        	<TextView
        	    android:id="@+id/destTextView"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="Destinations:"
        	    android:textColor="@android:color/darker_gray" >

        	</TextView>

            <ListView
                android:id="@+id/destListView"
                android:layout_width="match_parent"
                android:layout_height="149dp" >
            </ListView>

            <Button
                android:id="@+id/addDestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addDestinationOption"
                android:text="Add Destination"
                android:textAppearance="?android:attr/textAppearanceSmallInverse" />

</LinearLayout>

</ScrollView>