<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaimantClaimsListActivity" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/addClaimName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:hint="Claim Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/addDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addClaimName"
            android:layout_below="@+id/startDateBtn"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Destination"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/endDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addDestination"
            android:layout_alignLeft="@+id/endDateTitle"
            android:text="Pick End Date" />

        <EditText
            android:id="@+id/addReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addDestination"
            android:layout_below="@+id/addDestination"
            android:ems="10"
            android:hint="Reason For Travel"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/endDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endDateBtn"
            android:layout_toRightOf="@+id/startDateBtn"
            android:text="   End Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/startDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addDestination"
            android:layout_below="@+id/startDateTitle"
            android:text="Pick Start Date" />

        <TextView
            android:id="@+id/startDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/addClaimName"
            android:layout_below="@+id/addClaimName"
            android:layout_marginLeft="16dp"
            android:text=" Start Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</ScrollView>